void setup()
{
  Serial.begin(115200);

  // Connect to Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }
  Serial.println("Connected to WiFi");

  timeClient.begin();
  timeClient.update();
  
  display.init(115200);
  display.fillScreen(GxEPD_WHITE);
  display.setTextColor(GxEPD_BLACK);

}

void loop()
{
  // Update current time
  timeClient.update();

  // Make an HTTP request to get weather data
  HTTPClient http;
  http.begin(weatherApiUrl);
  int httpCode = http.GET();

  if (httpCode == HTTP_CODE_OK) {
    String payload = http.getString();
    // Parse JSON data
    DynamicJsonDocument doc(1024);
    deserializeJson(doc, payload);

    float temperature = doc["main"]["temp"].as<float>() - 273.15; // Convert from Kelvin to Celsius
    String weatherDescription = doc["weather"][0]["description"].as<String>();
    int humidity = doc["main"]["humidity"].as<int>();
    String city = doc["name"].as<String>();

    // Clear the display
    display.fillScreen(GxEPD_WHITE);
    display.setTextColor(GxEPD_BLACK);

    // Display current time
    display.setFont(&FreeMonoBold12pt7b);
    display.setCursor(10, 30);
    display.println("Time: " + timeClient.getFormattedTime());

    // Display city and weather
    display.setFont(&FreeMonoBold12pt7b);
    display.setCursor(10, 60);
    display.println("City: " + city);
    display.setCursor(10, 90);
    display.println("Weather: " + weatherDescription);

    // Display temperature and humidity
    display.setFont(&FreeMonoBold12pt7b);
    display.setCursor(10, 120);
    display.println("Temperature: " + String(temperature) + " °C");
    display.setCursor(10, 150);
    display.println("Humidity: " + String(humidity) + "%");

    // Draw the image at the bottom
    display.drawBitmap(230, 140, myImage, 150, 150, GxEPD_BLACK);

    // Draw the decorative border
    display.drawRect(0, 0, display.width(), display.height(), BORDER_COLOR);

    display.update();
  } else {
    Serial.println("Error getting weather data");
  }

  http.end();

  delay(10000); // Update weather data every 10 seconds
}